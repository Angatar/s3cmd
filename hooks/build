#!/bin/bash

echo "Starting multi-arch build process ..."
docker buildx build \
--platform linux/386,linux/amd64,linux/arm/v6,linux/arm/v7,linux/arm64/v8,linux/ppc64le,linux/s390x \
--sbom=true \
--provenance=true \
--pull \
--progress plain \
--tag $IMAGE_NAME \
--file $DOCKERFILE_PATH \
--push \
.
